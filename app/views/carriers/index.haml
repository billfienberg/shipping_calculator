%h1 Carriers
%table
  %tr
    %th Carrier ID
    %th Carrier Name
  -@carriers.each do |c|
    %tr
      %td= c.id
      %td= c.name
      %td= link_to "Edit", edit_carrier_path(c.id)
      %td= link_to "Delete", carrier_path(c.id), method: "delete", data: { confirm: "Are you sure?" }
= link_to "Add a New Carrier", new_carrier_path