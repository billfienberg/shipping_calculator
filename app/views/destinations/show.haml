%h3 Destination
%table
  %tr
    %th Location ID
    %th Name
    %th Store #
    %th Address
    %th City
    %th State
    %th Zip
    %th Approved Carriers
  %tr
    %td= @destination.id
    %td= @destination.name
    %td 1234
    %td= @destination.address
    %td= @destination.city
    %td= @destination.state
    %td= @destination.zip
    - @carriers = []
    - @carrier_destinations.each do |cd|
      - @carriers.push(Carrier.find(cd.carrier_id).name)
    %td= @carriers.join " "
    %td= link_to "Edit", edit_destination_path
    %td= link_to "Delete", destination_path, method: "delete"
  %tr
    %th Carrier
    %th Sunday
    %th Monday
    %th Tuesday
    %th Wednesday
    %th Thursday
    %th Friday
    %th Saturday
  - @carrier_destinations.each do |cd|
    %tr
      %td= Carrier.find(cd.carrier_id).name
      - if Day.where(destination_id:@destination.id, carrier_id:cd.carrier_id).first
        %td= Day.where(destination_id:@destination.id, carrier_id:cd.carrier_id).first.sn
        %td= Day.where(destination_id:@destination.id, carrier_id:cd.carrier_id).first.m
        %td= Day.where(destination_id:@destination.id, carrier_id:cd.carrier_id).first.t
        %td= Day.where(destination_id:@destination.id, carrier_id:cd.carrier_id).first.w
        %td= Day.where(destination_id:@destination.id, carrier_id:cd.carrier_id).first.r
        %td= Day.where(destination_id:@destination.id, carrier_id:cd.carrier_id).first.f
        %td= Day.where(destination_id:@destination.id, carrier_id:cd.carrier_id).first.sa
        %td= link_to "Edit", '#'
        %td= link_to "Delete", '#'
      - else
        %td{colspan:7}= link_to "Add Approved Delivery Days to a Carrier", new_destination_carrier_day_path(@destination, cd.carrier_id)
  %tr
    %td= link_to "Add Approved Carrier", new_destination_carrier_destination_path(@destination.id) 

%br
%table
  %tr 
    %th Holiday Name
    %th Date
  - if @holidays.length == 0
    %tr
      %td{colspan:2}= link_to "Add a Holiday to this Destination", new_destination_destination_holiday_path(@destination)
  - else
    - @holidays.each do |h|
      %tr
        %td= h.holiday.name
        %td= h.holiday.date
        %td= link_to "Edit", '#'
        %td= link_to "Delete", '#'
    %tr
      %td{colspan:2}= link_to "Add a Holiday to this Destination", new_destination_destination_holiday_path(@destination)
%br
= link_to "View All Destinations", destinations_path
